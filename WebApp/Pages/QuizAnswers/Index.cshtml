@page
@model WebApp.Pages.QuizAnswers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.QuizAnswer![0].AnsweredQuiz)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuizAnswer![0].Answer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.QuizAnswer!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AnsweredQuiz!.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Answer!.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
