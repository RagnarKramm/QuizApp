@page
@model WebApp.Pages.Quizzes.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<h3 class="text-danger">All answered quizzes and statistics will be deleted aswell!</h3>

<div>
    <h4>Quiz</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz!.Headline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz!.Headline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quiz!.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quiz!.Author)
        </dd>
    </dl>
    @if (Model.Quiz!.Questions!.Count > 0)
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Quiz!.Questions!.First().QuestionText)
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var question in @Model.Quiz!.Questions!)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => question.QuestionText)
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }

    <form method="post">
        <input type="hidden" asp-for="Quiz!.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="/Index">Back to List</a>
    </form>
    
</div>
